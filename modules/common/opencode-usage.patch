+import { TextAttributes } from "@opentui/core"
+import { useTheme } from "../context/theme"
+import { useDialog } from "@tui/ui/dialog"
+import { useSDK } from "@tui/context/sdk"
+import { createResource, For, Show, createSignal } from "solid-js"
+
+type Bucket = { utilization: number; resets_at: string | null }
+
+function relative(iso: string) {
+  const diff = new Date(iso).getTime() - Date.now()
+  if (diff <= 0) return "now"
+  const mins = Math.floor(diff / 60000)
+  const hours = Math.floor(mins / 60)
+  const days = Math.floor(hours / 24)
+  const remaining = mins % 60
+  if (days > 0) return `${days}d ${hours % 24}h`
+  if (hours > 0) return `${hours}h ${remaining}m`
+  return `${mins}m`
+}
+
+function bar(pct: number) {
+  const width = 20
+  const filled = Math.round((pct / 100) * width)
+  const empty = width - filled
+  return "\u2588".repeat(filled) + "\u2591".repeat(empty)
+}
+
+export function DialogUsage() {
+  const { theme } = useTheme()
+  const dialog = useDialog()
+  const sdk = useSDK()
+  const [hover, setHover] = createSignal(false)
+
+  const [data] = createResource(async () => {
+    const response = await fetch(sdk.url + "/auth/usage")
+    if (!response.ok) return null
+    return response.json()
+  })
+
+  const buckets = () => {
+    const d = data()
+    if (!d) return []
+    return [
+      { name: "5-Hour Rolling", bucket: d.five_hour as Bucket | null },
+      { name: "7-Day (All Models)", bucket: d.seven_day as Bucket | null },
+      { name: "7-Day (Sonnet)", bucket: d.seven_day_sonnet as Bucket | null },
+      { name: "7-Day (Opus)", bucket: d.seven_day_opus as Bucket | null },
+    ].filter((x) => x.bucket)
+  }
+
+  return (
+    <box paddingLeft={2} paddingRight={2} gap={1} paddingBottom={1}>
+      <box flexDirection="row" justifyContent="space-between">
+        <text fg={theme.text} attributes={TextAttributes.BOLD}>
+          Claude Max Usage
+        </text>
+        <box
+          paddingLeft={1}
+          paddingRight={1}
+          backgroundColor={hover() ? theme.primary : undefined}
+          onMouseOver={() => setHover(true)}
+          onMouseOut={() => setHover(false)}
+          onMouseUp={() => dialog.clear()}
+        >
+          <text fg={hover() ? theme.selectedListItemText : theme.textMuted}>esc</text>
+        </box>
+      </box>
+      <Show when={!data.loading && data()} fallback={<text fg={theme.textMuted}>Loading usage dataâ€¦</text>}>
+        <Show
+          when={buckets().length > 0}
+          fallback={<text fg={theme.textMuted}>No usage data available. Are you logged in with Claude Max?</text>}
+        >
+          <For each={buckets()}>
+            {(item) => {
+              const pct = Math.floor(item.bucket!.utilization)
+              const reset = item.bucket!.resets_at ? relative(item.bucket!.resets_at) : null
+              return (
+                <box>
+                  <text fg={theme.text}>
+                    <b>{item.name}</b>
+                  </text>
+                  <box flexDirection="row" gap={1}>
+                    <text fg={pct >= 90 ? theme.error : pct >= 70 ? theme.warning : theme.success}>{bar(pct)}</text>
+                    <text fg={theme.text}>{pct}%</text>
+                  </box>
+                  <Show when={reset}>
+                    <text fg={theme.textMuted}>Resets in {reset}</text>
+                  </Show>
+                </box>
+              )
+            }}
+          </For>
+        </Show>
+      </Show>
+      <Show when={!data.loading && data()?.extra_usage?.is_enabled}>
+        {(_) => {
+          const extra = data()!.extra_usage
+          const used = ((extra.used_credits ?? 0) / 100).toFixed(2)
+          const limit = ((extra.monthly_limit ?? 0) / 100).toFixed(2)
+          const pct = extra.utilization ? Math.round(extra.utilization) : 0
+          return (
+            <box>
+              <text fg={theme.text}>
+                <b>Extra Usage</b>
+              </text>
+              <box flexDirection="row" gap={1}>
+                <text fg={pct >= 90 ? theme.error : pct >= 70 ? theme.warning : theme.success}>{bar(pct)}</text>
+                <text fg={theme.text}>{pct}%</text>
+              </box>
+              <text fg={theme.textMuted}>
+                ${used} / ${limit}
+              </text>
+            </box>
+          )
+        }}
+      </Show>
+    </box>
+  )
+}

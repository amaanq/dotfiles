# Display help for Git Sizer
extern "git-sizer" [
	--help					# Display help for Git Sizer
	--verbose(-v)					# Report all statistics
	--critical					# Only report critical statistics
	--json(-j)					# Output results in JSON format
	--progress					# Report progress to stderr
	--no-progress					# Don't report progress to stderr
	--version					# Output git-sizer version
	--show-refs					# Show refs which are being included/excluded
	...args
]
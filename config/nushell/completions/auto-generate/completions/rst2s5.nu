# Specify a S5 theme
extern "rst2s5" [
	--theme					# Specify a S5 theme
	--theme-url					# Specify a S5 theme URL
	--overwrite-theme-files					# Allow overwriting existing theme files
	--keep-theme-files					# Keep existing theme files
	--hidden-controls					# Normally hide the controls
	--visible-controls					# Always show the controls
	--current-slide					# Enable the current slide indicator
	--no-current-slide					# Disable the current slide indicator
	...args
]
# Increase verbosity (show descriptors)
extern "lsusb" [
	--verbose(-v)					# Increase verbosity (show descriptors)
	--device(-D)					# Selects which device lsusb will examine
	--tree(-t)					# Dump the physical USB device hierarchy as a tree
	--version(-V)					# Show version of program
	--help(-h)					# Show usage and help
	...args
]
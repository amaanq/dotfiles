[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	name = Amaan Qureshi
	email = amaanq12@gmail.com
	signingkey = FCC13F47A6900D64239FF13BE67890ADC4227273

[color]
	ui = true

[alias]
	st = status -sb
	co = checkout
	c = commit --short
	ci = commit --short
	p = push
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --date=short

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[include]
	path = ~/projects/tokyonight.nvim/extras/delta/tokyonight_moon.gitconfig

[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = false
	line-numbers = true
	syntax-theme = tokyonight_moon

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default 

[pull]
	rebase = true

[github]
	user = amaanq

[commit]
	gpgsign = true

[credential]
	helper = cache

[rebase]
	autoStash = true
    preserveMerges = true

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential

[log]
	showSignature = true
